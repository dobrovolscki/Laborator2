{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Autentificare</h1>

    {# Afișează eventualele mesaje de eroare #}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# Formularul de autentificare #}
    <form method="post">
        <label for="username">Nume de utilizator:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>

        <label for="password">Parolă:</label>
        <input type="password" id="password" name="_password" required>

        {# Puteți adăuga un câmp pentru "Remember Me" dacă este necesar #}
        <input type="checkbox" id="remember_me" name="_remember_me">
        <label for="remember_me">Ține-mă minte</label>

        <button type="submit">Autentificare</button>
    </form>
{% endblock %}
